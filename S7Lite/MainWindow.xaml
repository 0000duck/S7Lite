<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S7Lite"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="S7Lite.MainWindow"
        mc:Ignorable="d"
        Title="S7Lite" Height="550" Width="350"
        Background="#FF315D85" Closing="Window_Closing">
     
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>
    
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*" x:Name="RowLog"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
            <ComboBox x:Name="cmb_ip" HorizontalContentAlignment="Center" Background="#FF315D85" BorderBrush="Black" FontSize="14" Margin="0 5 0 5" Padding="5" />
            <Button x:Name="btn_connect" Click="btn_connect_Click" FontSize="14" Padding="5" Content="Start"/>
        </StackPanel>


        <ScrollViewer x:Name="ScrollData" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="GridData" Grid.Row="1" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <!--
                <ComboBox x:Name="cmbtype_0" Panel.ZIndex="1000" Grid.Row="0" Grid.Column="0" SelectionChanged="cmbtype_SelectionChanged"/>
                <TextBlock x:Name="blcaddress0" Grid.Row="0" Grid.Column="1" Style="{StaticResource Address}"/>
                <TextBox x:Name="txtvalue0" Grid.Row="0" Grid.Column="2"/>
                -->
                
                <Button Grid.Row="1" Grid.Column="0" Click="Button_Click" x:Name="btnAdd">Add</Button>
                <Button Grid.Row="1" Grid.Column="2" x:Name="btnRemove" Click="Button_Click">Del</Button>

            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <Label Content="Log" FontSize="14" Foreground="White" 
                   VerticalAlignment="Stretch" 
                   HorizontalAlignment="Stretch" 
                   VerticalContentAlignment="Center" 
                   HorizontalContentAlignment="Center"
                   Cursor="Hand"
                   Style="{DynamicResource PanelButton}"
                   MouseDown="Label_MouseDown"
            />
        </Grid>

        <ScrollViewer Grid.Row="3" x:Name="Scroll" VerticalScrollBarVisibility="Auto" Height="auto" >
            <TextBlock x:Name="LogConsole"  Background="#FF353028" Foreground="#FFAAAAAA" Padding="2" FontSize="12" TextWrapping="Wrap"/>
        </ScrollViewer>

        <!-- Last row -->
        <Grid Grid.Row="4">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Foreground="WhiteSmoke" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Version"/>
            <Label Grid.Column="1" Foreground="WhiteSmoke" VerticalAlignment="Center" HorizontalAlignment="Center" Content="CPU 315-2 PN/DP"/>

        </Grid>

    </Grid>
</Window>
