<UserControl x:Class="S7Lite.DBControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:S7Lite"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">

    <Control.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Control.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--<DockPanel Grid.Row="0" x:Name="DbBar" MouseLeftButtonDown="DbBar_MouseLeftButtonDown" Background="Green">
            
        </DockPanel>-->

        <Grid Grid.Row="0" x:Name="DbBar" MouseLeftButtonDown="DbBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="lblDBNumber" Foreground="WhiteSmoke" Content="DB control"  HorizontalContentAlignment="Left" />
            <Label Grid.Column="1" x:Name="lblUsedBytes" Foreground="WhiteSmoke" Content="Used bytes" HorizontalContentAlignment="Right"/>
        </Grid>

        <Grid Grid.Row="1" Height="auto" x:Name="GridData" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50px"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
    </Grid>
</UserControl>
