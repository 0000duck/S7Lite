<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:S7Lite"
                    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">

    <Style x:Key="PanelButton" TargetType="Label">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF274968"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ComboBox" x:Key="DataTypeCombo" xmlns:c="clr-namespace:System.Collections;assembly=mscorlib">
        <Setter Property="ItemsSource">
            <Setter.Value>
                <c:ArrayList>
                    <ComboBoxItem>BOOL</ComboBoxItem>
                    <ComboBoxItem>INT</ComboBoxItem>
                    <ComboBoxItem>DNT</ComboBoxItem>
                    <ComboBoxItem>REAL</ComboBoxItem>
                    <ComboBoxItem>CHAR</ComboBoxItem>
                </c:ArrayList>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Address" TargetType="TextBlock">
        <Setter Property="Background" Value="#FF274968"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

</ResourceDictionary>